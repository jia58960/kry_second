                </div>
                <!--/Pagination-->
            </div>
        </div>
        <!--/Content-->
        <!--Sidebar-->
        <div id="sidebar" class="float-right">
            <!--box-->
            <div class="box">
                <h1 class="first-word double-color sp">
                    {$Lone.name}
                </h1>
                <ul class="list cat">
                    <volist id="vosub" name="subList">
                        <li>
                            <a href="{$vosub.url}" id="{$vosub.id}">
                                {$vosub.nav_name}
                            </a>
                        </li>
                    </volist>
                </ul>
                <input type="hidden" value="{$currentId}" id="CurrentId"/>
                <script type="text/javascript">
					$(function (){
						var cureentID = $("#CurrentId").val();
							$(".cat li a").each(function(index, element) {
                                	if($(this).attr('id')==cureentID){
										$(this).parent().addClass('current');
										}
                            });
						});
                </script>
            </div>
            <!--/box-->
            <!--box-->
            <div class="box">
                <h1 class="first-word double-color sp">
                    热门文章
                </h1>
                <ul class="zigzag list">
                <volist id="hotnews" name="hotNews">
                    <li> 
                        <div class="img-border preloading-light align-left">
                            <img src="__PUBLIC__/Home/default/Images/pix/01_Home_14-05.png" alt="">
                        </div>
                        <strong>
                            {$hotnews.title}
                        </strong>
                        <span>
                            {$hotnews.content|strip_tags|msubstr=0,20}
                        </span>
                        <a href="__URL__/article/detail/{$hotnews.id}" title="">
                            more
                        </a>
                    </li>
                   </volist>
                </ul>
            </div>
